<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ocruzmartz.tiendatracker.ui.tienda.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_newTiendaFragment"
            app:destination="@id/newTiendaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_tiendaFragment"
            app:destination="@id/tiendaFragment" />
    </fragment>
    <fragment
        android:id="@+id/newTiendaFragment"
        android:name="com.ocruzmartz.tiendatracker.ui.tienda.newtienda.NewTiendaFragment"
        android:label="fragment_new_tienda"
        tools:layout="@layout/fragment_new_tienda" />
    <fragment
        android:id="@+id/tiendaFragment"
        android:name="com.ocruzmartz.tiendatracker.ui.tienda.TiendaFragment"
        android:label="fragment_tienda"
        tools:layout="@layout/fragment_tienda" />
</navigation>